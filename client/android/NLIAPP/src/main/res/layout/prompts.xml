<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter STT credentials  "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/UsernameInput"
        android:layout_width="match_parent"
        android:hint="STT USERNAME"
        android:layout_height="wrap_content" >

        <requestFocus />
    </EditText>
    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:hint="STT PASSWIRD"
        android:layout_height="wrap_content" >


    </EditText>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter TTS credentials  "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/TTSUsernameInput"
        android:layout_width="match_parent"
        android:hint="TTS USERNAME"
        android:layout_height="wrap_content" >


    </EditText>
    <EditText
        android:id="@+id/TTSpasswordInput"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:hint="TTS PASSWIRD"
        android:layout_height="wrap_content" >

    </EditText>
</LinearLayout>